{
    "compilerOptions": {
        "experimentalDecorators": true,
        "baseUrl": ".",
        "outDir": "build/dist",
        "module": "esnext",
        "target": "es2017",
        "lib": ["es6", "dom", "esnext.asynciterable", "es2017"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "noUnusedLocals": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "removeComments": true,
        "paths": {
            "api/*": ["./src/api/*"],
            "assets/*": ["./src/assets/*"],
            "components/*": ["./src/components/*"],
            "constants/*": ["./src/constants/*"],
            "generated-gql/*": ["./src/generated-gql/*"],
            "hooks/*": ["./src/hooks/*"],
            "modules/*": ["./src/modules/*"],
            "pages/*": ["./src/pages/*"],
            "styles/*": ["./src/styles/*"],
            "types/*": ["./src/types/*"],
            "utils/*": ["./src/utils/*"],
            "svgs/*": ["./src/assets/svgs/*"],
        }
    },
    "exclude": [
        "node_modules",
        "build",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts"
    ]
}